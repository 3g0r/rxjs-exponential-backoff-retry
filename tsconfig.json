{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "es7", "es2016", "es2017", "es2018"],
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": true,
    "importHelpers": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "keyofStringsOnly": true,
    "esModuleInterop": true,
    "declaration": true,
    "stripInternal": true,
    "strict": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules"]
}
